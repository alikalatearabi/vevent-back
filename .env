# Environment variables for development
NODE_ENV=development
PORT=3001

# Database settings
POSTGRES_USER=vevent
POSTGRES_PASSWORD=veventpass
POSTGRES_DB=veventdb
POSTGRES_PORT=5432
DATABASE_URL="postgresql://vevent:veventpass@localhost:5432/veventdb?schema=public"

# JWT settings
JWT_ACCESS_SECRET=developmentsecret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=developmentrefreshsecret
JWT_REFRESH_EXPIRES_IN=7d

# Redis settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redispass

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173,http://0.0.0.0:3000
# Use 'none' for cross-origin requests, 'lax' for same-origin
COOKIE_SAME_SITE=none
# Set to 'true' if your frontend is using HTTPS, otherwise 'false' for local HTTP development
COOKIE_SECURE=false
# Uncomment and set this if your frontend is on a specific domain
# COOKIE_DOMAIN=localhost
