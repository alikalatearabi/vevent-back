generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  firstname     String
  lastname      String
  email         String         @unique
  passwordHash  String
  phone         String
  company       String?
  jobTitle      String?
  role          Role           @default(USER)
  avatarAssetId String?
  isActive      Boolean        @default(true)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  deletedAt     DateTime?
  attendees     Attendee[]
  AuditLog      AuditLog[]
  eventsCreated Event[]        @relation("EventCreator")
  speakersFor   EventSpeaker[]
  Exhibitor     Exhibitor[]
  favorites     Favorite[]
  notifications Notification[]
  recents       Recent[]
  refreshTokens RefreshToken[]
  avatarAsset   Asset?         @relation("AssetUserAvatar", fields: [avatarAssetId], references: [id])
}

model Event {
  id                 String              @id @default(uuid())
  name               String
  title              String
  description        String?
  color              String?
  start              DateTime
  end                DateTime
  timed              Boolean             @default(true)
  location           String?
  exhibitorId        String?
  timezone           String?
  published          Boolean             @default(false)
  createdById        String?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  deletedAt          DateTime?
  assets             AssetOnEvent[]
  attendees          Attendee[]
  connectionRequests ConnectionRequest[]
  createdBy          User?               @relation("EventCreator", fields: [createdById], references: [id])
  exhibitor          Exhibitor?          @relation(fields: [exhibitorId], references: [id])
  speakers           EventSpeaker[]
  tags               TagOnEvent[]

  @@index([start])
}

model EventSpeaker {
  id      String  @id @default(uuid())
  eventId String
  userId  String
  role    String?
  order   Int?    @default(0)
  event   Event   @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
}

model Exhibitor {
  id            String             @id @default(uuid())
  name          String
  title         String?
  description   String?
  website       String?
  location      String?
  sponsor       Boolean            @default(false)
  favoriteCount Int                @default(0)
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  deletedAt     DateTime?
  createdById   String?
  assets        AssetOnExhibitor[]
  events        Event[]
  createdBy     User?              @relation(fields: [createdById], references: [id])
  products      Product[]
  tags          TagOnExhibitor[]

  @@index([name])
}

model Product {
  id               String           @id @default(uuid())
  exhibitorId      String
  categoryId       String?
  name             String
  title            String?
  description      String?
  shortDescription String?
  price            Decimal?         @db.Decimal(12, 2)
  imageUrl         String?
  inStock          Boolean          @default(true)
  featured         Boolean          @default(false)
  metadata         Json?
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  deletedAt        DateTime?
  assets           AssetOnProduct[]
  category         Category?        @relation(fields: [categoryId], references: [id])
  exhibitor        Exhibitor        @relation(fields: [exhibitorId], references: [id], onDelete: Cascade)
  tags             TagOnProduct[]

  @@index([name])
  @@index([categoryId])
  @@index([featured])
  @@index([inStock])
}

model Attendee {
  id               String              @id @default(uuid())
  userId           String?
  eventId          String
  email            String?
  ticketType       String?
  checkedIn        Boolean             @default(false)
  metadata         Json?
  createdAt        DateTime            @default(now())
  avatar           String?
  company          String?
  firstName        String
  jobTitle         String?
  lastName         String
  phone            String?
  role             AttendeeRole        @default(VISITOR)
  showCompany      Boolean             @default(true)
  showEmail        Boolean             @default(true)
  showPhone        Boolean             @default(true)
  event            Event               @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user             User?               @relation(fields: [userId], references: [id])
  receivedRequests ConnectionRequest[] @relation("ReceiverConnection")
  sentRequests     ConnectionRequest[] @relation("RequesterConnection")

  @@index([eventId])
  @@index([userId])
  @@index([role])
}

model ConnectionRequest {
  id               String           @id @default(uuid())
  requesterId      String
  receiverId       String
  eventId          String?
  status           ConnectionStatus @default(PENDING)
  message          String?
  requestDateTime  DateTime         @default(now())
  responseDateTime DateTime?
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  event            Event?           @relation(fields: [eventId], references: [id], onDelete: Cascade)
  receiver         Attendee         @relation("ReceiverConnection", fields: [receiverId], references: [id], onDelete: Cascade)
  requester        Attendee         @relation("RequesterConnection", fields: [requesterId], references: [id], onDelete: Cascade)

  @@unique([requesterId, receiverId, eventId])
  @@index([requesterId])
  @@index([receiverId])
  @@index([status])
  @@index([eventId])
}

model Favorite {
  id           String       @id @default(uuid())
  userId       String
  resourceType ResourceType
  resourceId   String
  createdAt    DateTime     @default(now())
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([resourceType, resourceId])
}

model Notification {
  id        String    @id @default(uuid())
  userId    String?
  type      String?
  icon      String?
  color     String?
  message   String
  data      Json?
  read      Boolean   @default(false)
  createdAt DateTime  @default(now())
  expiresAt DateTime?
  user      User?     @relation(fields: [userId], references: [id])
}

model Asset {
  id              String             @id @default(uuid())
  url             String
  type            String?
  meta            Json?
  createdBy       String?
  createdAt       DateTime           @default(now())
  deletedAt       DateTime?
  eventLinks      AssetOnEvent[]
  exhibitorLinks  AssetOnExhibitor[]
  productLinks    AssetOnProduct[]
  userAvatarLinks User[]             @relation("AssetUserAvatar")
}

model AssetOnProduct {
  id        String  @id @default(uuid())
  assetId   String
  productId String
  role      String?
  asset     Asset   @relation(fields: [assetId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
}

model AssetOnExhibitor {
  id          String    @id @default(uuid())
  assetId     String
  exhibitorId String
  role        String?
  asset       Asset     @relation(fields: [assetId], references: [id], onDelete: Cascade)
  exhibitor   Exhibitor @relation(fields: [exhibitorId], references: [id], onDelete: Cascade)
}

model AssetOnEvent {
  id      String  @id @default(uuid())
  assetId String
  eventId String
  role    String?
  asset   Asset   @relation(fields: [assetId], references: [id], onDelete: Cascade)
  event   Event   @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

model Tag {
  id         String           @id @default(uuid())
  name       String           @unique
  title      String?
  color      String?
  meta       Json?
  createdAt  DateTime         @default(now())
  events     TagOnEvent[]
  exhibitors TagOnExhibitor[]
  products   TagOnProduct[]
}

model Category {
  id          String     @id @default(uuid())
  name        String     @unique
  title       String?
  description String?
  color       String?
  icon        String?
  parentId    String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  parent      Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryHierarchy")
  products    Product[]

  @@index([name])
  @@index([parentId])
}

model TagOnEvent {
  id      String @id @default(uuid())
  tagId   String
  eventId String
  event   Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)
  tag     Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([tagId, eventId])
}

model TagOnExhibitor {
  id          String    @id @default(uuid())
  tagId       String
  exhibitorId String
  exhibitor   Exhibitor @relation(fields: [exhibitorId], references: [id], onDelete: Cascade)
  tag         Tag       @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([tagId, exhibitorId])
}

model TagOnProduct {
  id        String  @id @default(uuid())
  tagId     String
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  tag       Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([tagId, productId])
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String
  tokenHash String
  expiresAt DateTime
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  action    String
  entity    String
  entityId  String?
  data      Json?
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
}

model Recent {
  id           String       @id @default(uuid())
  userId       String
  resourceType ResourceType
  resourceId   String
  metadata     Json?
  createdAt    DateTime     @default(now())
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([resourceType, resourceId])
}

enum Role {
  USER
  ADMIN
}

enum ResourceType {
  EVENT
  EXHIBITOR
  PRODUCT
}

enum AttendeeRole {
  SPEAKER
  VISITOR
  GUEST
  ADMIN
  MODERATOR
}

enum ConnectionStatus {
  PENDING
  ACCEPTED
  REJECTED
}
